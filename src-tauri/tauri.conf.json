{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AIO",
  "version": "0.2.1",
  "identifier": "com.loch.aio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "minHeight": 540,
        "minWidth": 960,
        "title": "AIO",
        "width": 1600,
        "height": 900,
        "decorations": false,
        "transparent": true,
        "windowEffects":{
          "effects":[
            "acrylic"
          ],
          "color":[0,0,0,10],
          "state":"active"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/llama-backend/**/*"
    ]
  }
}
