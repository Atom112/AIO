{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AIO",
  "version": "0.3.1",
  "identifier": "com.loch.aio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "minHeight": 540,
        "minWidth": 960,
        "title": "AIO",
        "width": 1600,
        "height": 900,
        "decorations": false,
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    }
  },
  "bundle": {
    "license": "Apache-2.0",
    "licenseFile": "../LICENSE",
    "active": true,
    "targets": ["deb", "rpm", "nsis", "msi", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/llama-backend/**/*"
    ]
  }
}
